<Window x:Class="ch22yaml.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch22yaml"
        mc:Ignorable="d"
        Title="Tvtest Ch2 to yml Channel Converter" Height="560" Width="490" ResizeMode="NoResize">
    <Grid Margin="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Column="0" Grid.RowSpan="2" Margin="3" ItemsSource="{Binding ChannelList}"/>
        <Button Grid.Column="1" Grid.Row="0" Margin="3,50" Content="OpenCh2" Command="{Binding OpenCH2}"/>
        <Button Grid.Column="1" Grid.Row="1" Margin="3,50" Content="SaveYml" Command="{Binding SaveYaml}"/>
    </Grid>
</Window>
